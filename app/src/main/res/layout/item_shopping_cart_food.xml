<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비건 라면"
        android:textSize="21sp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >


    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="12dp"
        android:id="@+id/item_shopping_cart_cardview"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:id="@+id/item_shopping_cart_food_iv"
            android:src="@drawable/img_dummy_food"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>
    </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="두부 샐러드"
                android:textColor="@color/black_80"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/item_shopping_cart_food_name_tv"
                android:ellipsize="end"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="125g"
                android:textColor="@color/black_80"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/item_shopping_cart_food_weight_tv"
                android:ellipsize="end"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/item_shopping_cart_food_name_tv"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240kcal"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black_80"
                android:textSize="16sp"
                android:id="@+id/item_shopping_cart_food_kcal_tv"
                app:layout_constraintStart_toStartOf="@id/item_shopping_cart_food_name_tv"
                app:layout_constraintTop_toBottomOf="@id/item_shopping_cart_food_name_tv"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                />

            <CheckBox
                android:id="@+id/item_shopping_cart_foodlist_cb"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/item_shopping_cart_food_name_tv"
                app:layout_constraintBottom_toBottomOf="@id/item_shopping_cart_food_kcal_tv"
                android:layout_marginEnd="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginVertical="5dp"
                app:layout_constraintTop_toBottomOf="@id/item_shopping_cart_food_kcal_tv"
                >
                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checkedButton="@id/item_dietmk_shopping_cart_radiobt1"  >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/item_dietmk_shopping_cart_radiobt1"
                    android:textColor="@drawable/selector_checkbox_signin_text"
                    android:text="아침"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/selector_checkbox_signin"
                    />
                <RadioButton
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:text="점심"

                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:textColor="@drawable/selector_checkbox_signin_text"
                    android:background="@drawable/selector_checkbox_signin"
                    />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@android:color/transparent"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="@drawable/selector_checkbox_signin_text"
                    android:text="저녁"
                    android:background="@drawable/selector_checkbox_signin"
                    />
                </RadioGroup>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</LinearLayout>